# .htaccess minimal rules for friendly URLs
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect directory-style logout URL to the explicit PHP file
    RewriteRule ^pagesweb/logout/?$ /pagesweb/logout.php [L,R=301]

</IfModule>
# Interdire le listing de répertoires

Options -Indexes



# Activer mod_rewrite

RewriteEngine On

RewriteBase /



# 1. Si on tape une URL sans extension (.php implicite)

#    Exemple: /pagesweb/formations/ => pagesweb/formations.php

RewriteCond %{REQUEST_FILENAME} !-d

RewriteCond %{REQUEST_FILENAME}\.php -f

RewriteRule ^(.+)/$ $1.php [L]



# 2. Optionnel : enlever .php quand on tape avec extension

#    Exemple: /pagesweb/formations.php => /pagesweb_cn/formations/

RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]

RewriteRule ^ %1/ [R=301,L]





# 3. Page 404 personnalisée

# -----------------------------------------------------

ErrorDocument 404 /pagesweb/404.php





# Bloquer l’accès direct aux dossiers sans index